<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/gray_5D"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/calendar_day_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >
        <TextView
            android:maxLines="1"
            android:layout_margin="2dp"
            android:id="@+id/calendar_text_holder"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@drawable/fontcolor_calendar_day"

            android:background="@drawable/background_calendar_day"

            android:fontFamily="@font/poppins_regular"
            android:paddingTop="2.3dp"

            android:text="11"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>